@model List<string>
@{
    ViewData["Title"] = "Index";
}

<form method="post" asp-action="Add" enctype="application/x-www-form-urlencoded">
<input type="text" name="book"/>    
<button type="submit">Save</button>
</form>


@foreach (var item in Model)
{
    <h3>@item <a asp-controller="List" asp-action="Delete" asp-route-book="@item">Delete</a></h3>
}